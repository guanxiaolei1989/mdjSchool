<view class="page">
  <view class="news">
    <view class="item bdbt" wx:for="{{news}}" wx:key="id">
      <navigator url="/pages/news/detail?news_id={{item.id}}">
        <view class="tit">{{item.title}}</view>
        <view class="riqi">{{item.time}}</view>

      </navigator>
    </view>
  </view>
  
  <view bindtap="loadMore" wx:if="{{datas!=''&&more==1}}" style="color:{{color}}" class="more">查看更多</view>
  <!-- <view wx:if="{{datas!=''&&more==0}}" class="nomore">没有数据了</view> -->
  <!-- <view class="nomore">没有数据了</view> -->
</view>

<view style="height:100rpx;"></view>

