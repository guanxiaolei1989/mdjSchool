.item{
  height: auto;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  overflow: hidden;
}

.item .lt{
  float: left;
  width: 200rpx;
  height: 200rpx;
  margin-left: 10rpx;
}
.item .lt image{
  width: 200rpx;
  height: 200rpx;
}

.item .rt{
  float: left;
  margin-left: 10rpx;
  width: 480rpx;
  height: auto;
  overflow: hidden;
}

.item .rt .tit{
  height:auto;
  overflow: hidden;
  line-height: 40rpx;
  font-size: 26rpx;
}

.item .rt .time,.feiyong,.didian,.num{
  height: 30rpx;
  line-height: 30rpx;
  color: #666;
  margin-top: 10rpx;
}

.feiyong text{
  color:red;
}