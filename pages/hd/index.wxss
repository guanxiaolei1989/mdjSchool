/* pages/hd/index.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.app .item {
  width: 96%;
  margin: 20rpx 2%;
  height: auto;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
  border-radius: 12rpx;
}

.app .item image {
  width: 100%;
  height: 360rpx;
}

.app .item .title {
  width: 92%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 4%;
  font-size: 28rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

