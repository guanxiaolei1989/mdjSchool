/* pages/hd/detail.wxss */

.app {
  width: 100%;
  height: auto;
  overflow: hidden;
  font-size: 26rpx;
}

.app .nickname {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx #f5f5f5 solid;
}

.app .tpxx {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  text-align: center;
  padding: 20rpx 0;
}

.app .tpxx .titem {
  width: 33.3%;
  height: 80rpx;
  float: left;
}

.app .tpxx .titem .name {
  width: auto;
  height: auto;
  font-size: 26rpx;
  color: #515151;
}

.app .tpxx .titem .count {
  width: auto;
  height: auto;
  font-size: 26rpx;
  color: #515151;
  margin-top: 12rpx;
}

.app .hdbj {
  width: 78%;
  height: 560rpx;
  background: #fff;
  padding: 20rpx 11%;
}

.app .hdbj image {
  width: 100%;
  height: 560rpx;
}

.app .info {
  width: 100%;
  height: auto;
}

.app .info .title {
  width: 92%;
  height: 80rpx;
  padding: 0 4%;
  line-height: 80rpx;
  background: #f8f8f8;
  font-size: 28rpx;
  color: #000;
}

.app .info .content {
  width: 92%;
  height: auto;
  padding: 30rpx 4%;
  font-size: 24rpx;
  background: #fff;
  color: #000;
}

.app .bview {
  width: 100%;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  border-top: 1rpx #f5f5f5 solid;
}

.app .bview .lb {
  width: 65%;
  height: 80rpx;
  line-height: 80rpx;
  background: #ee4000;
  text-align: center;
  font-size: 26rpx;
  border-radius: 0;
  float: left;
  color: #fff;
}

.app .bview .rb {
  width: 35%;
  height: 80rpx;
  line-height: 80rpx;
  background: #e3e3e3;
  font-size: 26rpx;
  float: right;
  text-align: center;
  color: #fff;
}

